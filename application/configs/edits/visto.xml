<?xml version="1.0" encoding="UTF-8"?>
<edits>
    <visto>
        <title>Visti</title>
        <edittitle>Modifica visto</edittitle>
        <newtitle>Nuovo visto</newtitle>
        <savingalert>1</savingalert>
        <maintable>visti</maintable>
        <currkey>idVisto</currkey>
        <currsql>SELECT * FROM visti WHERE </currsql>
        <parameters>
            <pass_id>
                <from>arrdefaultnamespace</from>
                <array>currPers</array>
                <offset>idPass</offset>
            </pass_id>
        </parameters>
        <!--<mode>{{rwmode}}</mode>-->
        <form>
            <name>formVisti</name>
            <elements>
                <idVisto>
                    <type>hidden</type>
                </idVisto>
                <idPass>
                    <type>hidden</type>
                    <value>pass_id</value>
                </idPass>
                <Paese>
                    <type>text</type>
                    <notempty>true</notempty>
                    <label>Paese</label>
                    <parameters>
                        <size>20</size>
                        <maxlen>255</maxlen>
                    </parameters>
                </Paese>
                <idVisaType>
                    <type>select</type>
                    <label>Tipo</label>
                    <selsql>
                        SELECT tab_visa_types.idVisaType AS KeyId, 
                            tab_visa_types.VisaType AS Value
                        FROM tab_visa_types
                    </selsql>
                </idVisaType>
                <Rilascio>
                    <type>date</type>
                    <notempty>true</notempty>
                    <parameters>
                        <Label>Rilascio</Label>
                        <notempty>true</notempty>
                        <Locale>it-IT</Locale>
                        <FormatLength>long</FormatLength>
                        <DatePattern>dd/MM/yyyy</DatePattern>
                    </parameters>
                </Rilascio>
                <Scadenza>
                    <type>date</type>
                    <notempty>true</notempty>
                    <parameters>
                        <Label>Scadenza</Label>
                        <notempty>true</notempty>
                        <Locale>it-IT</Locale>
                        <FormatLength>long</FormatLength>
                        <DatePattern>dd/MM/yyyy</DatePattern>
                    </parameters>
                </Scadenza>
                <MaxPermanenza>
                    <type>text</type>
                    <label>Max giorni</label>
                    <parameters>
                        <size>6</size>
                        <maxlen>6</maxlen>
                    </parameters>
                </MaxPermanenza>
                <Pubwarning>
                    <type>linecustom</type>
                    <description> &lt;h3&gt; Documenti allegati &lt;/h3&gt;</description> 
                </Pubwarning>
                <AllVisti>
                    <type>file</type>
                    <label>Allegato</label>
                    <parameters>
                        <MultiFile>1</MultiFile>
                        <Size>2000000</Size>
                    </parameters>
                </AllVisti>
                <Limitazioni>
                    <label>Limitazioni</label>
                    <type>textarea</type>
                    <parameters>
                        <rows>3</rows>
                    </parameters>
                </Limitazioni> 
                <Note>
                    <label>Note</label>
                    <type>textarea</type>
                    <parameters>
                        <rows>3</rows>
                    </parameters>
                </Note> 
                <spazioverticale>
                    <type>linecustom</type>
                    <parameters>
                        <type>h3</type>
                    </parameters>
                    <description> &lt;div class="spazioverticale"&gt;&lt;/div&gt; </description> 
                </spazioverticale>
                <Conferma>
                    <type>submitreset</type>
                    <label>Conferma</label>
                </Conferma>
            </elements>
        </form>
    </visto>
</edits>