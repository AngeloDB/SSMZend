<?xml version="1.0" encoding="UTF-8"?>
<edits>
    <forn_pers>
        <title>Fornitori</title>
        <edittitle>Modifica fornitore</edittitle>
        <newtitle>Nuovo fornitore</newtitle>
        <savingalert>1</savingalert>
        <maintable>forn_pers</maintable>
        <currkey>idFornPers</currkey>
        <currsql>SELECT * FROM forn_pers WHERE </currsql>
        <!--<mode>{{rwmode}}</mode>-->
        <form>
            <name>formFornitori</name>
            <elements>
                <idFornPers>
                    <type>hidden</type>
                </idFornPers>
                <Nome>
                    <type>text</type>
                    <notempty>true</notempty>
                    <label>Nome</label>
                    <parameters>
                        <size>40</size>
                        <maxlen>255</maxlen>
                    </parameters>
                </Nome>
                <RagSoc>
                    <type>text</type>
                    <notempty>true</notempty>
                    <label>Ragione Sociale</label>
                    <parameters>
                        <size>80</size>
                        <maxlen>255</maxlen>
                    </parameters>
                </RagSoc>
                <Tipo>
                    <type>select</type>
                    <notempty>true</notempty>
                    <label>Type</label>
                    <selsql>
                        SELECT tab_fornpers_types.FornpersType AS KeyId, tab_fornpers_types.Descrizione AS Value
                        FROM tab_fornpers_types
                    </selsql>
                </Tipo>
<!--                <Tipo>
                    <type>text</type>
                    <label>Type</label>
                    <parameters>
                        <size>1</size>
                        <maxlen>1</maxlen>
                    </parameters>
                </Tipo>                -->
                <Citta>
                    <type>text</type>
                    <label>Citt√†</label>
                    <parameters>
                        <size>80</size>
                        <maxlen>255</maxlen>
                    </parameters>
                </Citta>
                <Indirizzo>
                    <type>text</type>
                    <label>Indirizzo</label>
                    <parameters>
                        <size>80</size>
                        <maxlen>255</maxlen>
                    </parameters>
                </Indirizzo>
                <Riferimento>
                    <type>text</type>
                    <label>Riferimento</label>
                    <parameters>
                        <size>80</size>
                        <maxlen>255</maxlen>
                    </parameters>
                </Riferimento>
                <Email>
                    <type>text</type>
                    <label>Email</label>
                    <parameters>
                        <size>80</size>
                        <maxlen>255</maxlen>
                    </parameters>
                </Email>
                <Telefono>
                    <type>text</type>
                    <label>Telefono</label>
                    <parameters>
                        <size>36</size>
                        <maxlen>36</maxlen>
                    </parameters>
                </Telefono>
                <Note>
                    <label>Note</label>
                    <type>textarea</type>
                    <parameters>
                        <rows>3</rows>
                    </parameters>
                </Note> 
                <spazioverticale>
                    <type>linecustom</type>
                    <parameters>
                        <type>h3</type>
                    </parameters>
                    <description> &lt;div class="spazioverticale"&gt;&lt;/div&gt; </description> 
                </spazioverticale>
                <Conferma>
                    <type>submitreset</type>
                    <label>Conferma</label>
                </Conferma>
            </elements>
        </form>
    </forn_pers>
</edits>