<?xml version="1.0" encoding="UTF-8"?>
<edits>
    <passaporto>
        <title>Passaporto</title>
        <edittitle>Modifica passaporto</edittitle>
        <newtitle>Nuovo passaporto</newtitle>
        <savingalert>1</savingalert>
        <maintable>passaporti</maintable>
        <currkey>idPass</currkey>
        <currsql>SELECT * FROM passaporti WHERE </currsql>
        <parameters>
            <pers_id>
                <from>arrdefaultnamespace</from>
                <array>currPers</array>
                <offset>idPersonale</offset>
            </pers_id>
        </parameters>
        <!--<mode>{{rwmode}}</mode>-->
        <form>
            <name>formPassaporti</name>
            <elements>
                <idPass>
                    <type>hidden</type>
                </idPass>
                <idPersonale>
                    <type>hidden</type>
                    <value>pers_id</value>
                </idPersonale>
                <Numero>
                    <type>text</type>
                    <notempty>true</notempty>
                    <label>NumeroPass</label>
                    <parameters>
                        <size>36</size>
                        <maxlen>50</maxlen>
                    </parameters>
                </Numero>
                <DataRilascio>
                    <type>date</type>
                    <notempty>true</notempty>
                    <parameters>
                        <Label>Rilascio</Label>
                        <notempty>true</notempty>
                        <Locale>it-IT</Locale>
                        <FormatLength>long</FormatLength>
                        <DatePattern>dd/MM/yyyy</DatePattern>
                    </parameters>
                </DataRilascio>
                <LuogoRilascio>
                    <type>text</type>
                    <notempty>true</notempty>
                    <label>Paese</label>
                    <parameters>
                        <size>80</size>
                        <maxlen>255</maxlen>
                    </parameters>
                </LuogoRilascio>
                <RilasciatoDa>
                    <type>text</type>
                    <notempty>true</notempty>
                    <label>Rilasciato da</label>
                    <parameters>
                        <size>80</size>
                        <maxlen>255</maxlen>
                    </parameters>
                </RilasciatoDa>
                <Scadenza>
                    <type>date</type>
                    <notempty>true</notempty>
                    <parameters>
                        <Label>Scadenza</Label>
                        <notempty>true</notempty>
                        <Locale>it-IT</Locale>
                        <FormatLength>long</FormatLength>
                        <DatePattern>dd/MM/yyyy</DatePattern>
                    </parameters>
                </Scadenza>
                <Pubwarning>
                    <type>linecustom</type>
                    <description> &lt;h3&gt; Attachments  &lt;/h3&gt;</description> 
                </Pubwarning>
                <Allegato>
                    <type>file</type>
                    <label>Allegato</label>
                    <parameters>
                        <MultiFile>1</MultiFile>
                        <Size>20000000</Size>
                    </parameters>
                </Allegato>
                <Limitazioni>
                    <label>Limitazioni</label>
                    <type>textarea</type>
                    <parameters>
                        <rows>3</rows>
                    </parameters>
                </Limitazioni> 
                <Note>
                    <label>Note</label>
                    <type>textarea</type>
                    <parameters>
                        <rows>3</rows>
                    </parameters>
                </Note> 
                <spazioverticale>
                    <type>linecustom</type>
                    <parameters>
                        <type>h3</type>
                    </parameters>
                    <description> &lt;div class="spazioverticale"&gt;&lt;/div&gt; </description> 
                </spazioverticale>
                <Conferma>
                    <type>submitreset</type>
                    <label>Conferma</label>
                </Conferma>
            </elements>
        </form>
    </passaporto>
</edits>