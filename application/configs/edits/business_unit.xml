                <Note>
                    <label>Note</label>
                    <type>textarea</type>
                    <parameters>
                        <rows>3</rows>
                    </parameters>
                </Note> 
                <spazioverticale>
                    <type>linecustom</type>
                    <parameters>
                        <type>h3</type>
                    </parameters>
                    <description> &lt;div class="spazioverticale"&gt;&lt;/div&gt; </description> 
                </spazioverticale>
                <Conferma>
                    <type>submitreset</type>
                    <label>Conferma</label>
