        <currsql>SELECT * FROM business_units WHERE </currsql>
        <!--<mode>{{rwmode}}</mode>-->
        <form>
            <name>formbu</name>
            <elements>
                <idBusinessUnit>
                    <type>hidden</type>
                </idBusinessUnit>
                <DescShort>
                    <type>text</type>
                    <label>Short Name</label>
                    <parameters>
                        <size>40</size>
                        <maxlen>255</maxlen>
                    </parameters>
                </DescShort>
                <Descrizione>
                    <type>text</type>
                    <label>Descrizione</label>
