<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
  <base>
    <index>
      <label>Home</label>
      <uri>#</uri>
      <pages>
        <login>
          <label>Login</label>
          <controller>login</controller>
          <action>index</action>
          <resource>login</resource>
        </login>
        <logout>
          <label>Logout</label>
          <controller>login</controller>
          <action>logout</action>
          <resource>logout</resource>
        </logout>
        <update>
          <label>Aggiorna</label>
          <controller>login</controller>
          <action>update</action>
          <resource>logout</resource>
        </update>
      </pages>
    </index>
    <tabelle>
      <label>Tabelle</label>
      <resource>tabelle</resource>
      <uri>#</uri>
      <pages>
        <cantieri>
          <label>Cantieri</label>
          <controller>cantieri</controller>
          <action>list</action>
          <params>
            <table>cantieri</table>
            <keyfield>idCantiere</keyfield>
          </params>
        </cantieri>
        <ditte>
          <label>Ditte</label>
          <controller>ditte</controller>
          <action>list</action>
          <params>
            <table>ditte</table>
            <keyfield>idDitta</keyfield>
          </params>
        </ditte>
        <appalti>
          <label>Appalti</label>
          <controller>Appalti</controller>
          <action>list</action>
          <params>
            <table>appalti</table>
            <keyfield>idAppalto</keyfield>
          </params>
        </appalti>
      </pages>
    </tabelle>
    <organigramma>
      <label>Organigramma</label>
      <controller>organigramma</controller>
      <action>index</action>
    </organigramma>
    <calendario>
      <label>Calendario</label>
      <controller>calendario</controller>
      <action>index</action>
    </calendario>
  </base>
</zend-config>
