<?xml version="1.0" encoding="UTF-8"?>
<grids>
    <new_pers>
        <title>Nuovo Personale</title>
        <addlink>/import-cv/new</addlink>
        <addtitle>Import CV</addtitle>
        <parameters>
            <baseUrl>
                <from>defaultnamespace</from>
            </baseUrl>
            <aclReadonly>
                <from>defaultnamespace</from>
            </aclReadonly>
            <canDelete>
                <from>cond</from>
                <type>eq</type>
                <op1>{{aclReadonly}}</op1>
                <op2>1</op2>
            </canDelete>
        </parameters>
        <select>
            <from>
                <aliasname>
                    <new_pers>new_pers</new_pers>
                </aliasname>
                <fields>
                    <idNewPers>idNewPers</idNewPers>
                    <Nome>Nome</Nome>
                    <Cognome>Cognome</Cognome>
                    <Email>Email</Email>
                    <TelMobile>TelMobile</TelMobile>
                    <delIco>CONCAT("fechar")</delIco>
                    <delLink>CONCAT('/import-cv/delete/id/', new_pers.idNewPers)</delLink>
                    <delAlert>'return(confirm(''Confirm delete?''));'</delAlert>
                </fields>
            </from>
            <join id='forn_pers'>
                <type>left</type>
                <cond>forn_pers.idFornPers = new_pers.idFornPers</cond>
                <aliasname>
                    <forn_pers>forn_pers</forn_pers>
                </aliasname>
                <fields>
                    <RagSoc>RagSoc</RagSoc>
                    <!--<TipoSoc>Tipo</TipoSoc>-->
                </fields>
            </join>
            <join id='qualifiche'>
                <type>left</type>
                <cond>qualifiche.idQualifica = new_pers.idQualifica</cond>
                <aliasname>
                    <qualifiche>qualifiche</qualifiche>
                </aliasname>
                <fields>
                    <Qualifica>Descrizione</Qualifica>
                </fields>
            </join>
            <join id='tab_stato_newpers'>
                <type>left</type>
                <cond>tab_stato_newpers.IdTabStatoNewPers = new_pers.IdTabStatoNewPers</cond>
                <aliasname>
                    <tab_stato_newpers>tab_stato_newpers</tab_stato_newpers>
                </aliasname>
                <fields>
                    <Stato>Stato</Stato>
                </fields>
            </join>
            <join></join>
            <group>
                new_pers.idNewPers
            </group>                        
            <order>CONCAT(forn_pers.RagSoc,new_pers.Cognome,new_pers.Nome)</order>
        </select>
        <updatecolumns>
            <ggScadenza>
                <hidden>1</hidden>
            </ggScadenza>
            <idNewPers>
                <hidden>1</hidden>
            </idNewPers>
            <delIco>
                <hidden>1</hidden>
            </delIco>
            <delLink>
                <hidden>1</hidden>
            </delLink>
            <delAlert>
                <hidden>1</hidden>
            </delAlert>
            <Nome>
                <title>Nome</title>
                <position>1</position>
            </Nome>
            <Cognome>
                <title>Cognome</title>
                <position>2</position>
            </Cognome>
            <Qualifica>
                <title>Qualifica</title>
                <position>3</position>
            </Qualifica>
            <Email>
                <title>Email</title>
                <position>4</position>
            </Email>
            <TelMobile>
                <title>Telefono</title>
                <position>5</position>
            </TelMobile>
            <RagSoc>
                <title>Fornitore</title>
                <position>6</position>
            </RagSoc>
            <Stato>
                <title>Valutazione</title>
                <position>7</position>
            </Stato>
        </updatecolumns>
        <extracolumns>
            <Riass>
                <position>left</position>
                <title>Modifica</title>
                <decorator>
                    /import-cv/edit/id/{{idNewPers}}/seltab/0#/images/edit.png#Modifica
                </decorator>
            </Riass>
            <if>
                <cond>{{canDelete}}</cond>
                <iftrue>
                </iftrue>
                <iffalse>                    
                    <Del>
                        <position>left</position>
                        <title>Delete</title>
                        <decorator>
                            <link>
                                    {{delLink}}
                            </link>
                            <linkstyle>
                                    cursor:help;
                            </linkstyle>
                            <linkimg>
                                    /images/{{delIco}}.png
                            </linkimg>
                            <onclick>{{delAlert}}</onclick>
                            <linkalt>
                                    Delete
                            </linkalt>
                            <linktitle>
                                    Delete
                            </linktitle>                    
                        </decorator>
                    </Del>
                </iffalse>
            </if>
        </extracolumns>
    </new_pers>
</grids>