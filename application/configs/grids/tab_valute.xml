<?xml version="1.0" encoding="UTF-8"?>
<grids>
    <tab_valute>
        <title>Valute</title>
        <addlink>/valute/new</addlink>
        <addtitle>Nuova valuta</addtitle>
        <pagemode>portrait</pagemode>
        <parameters>
            <baseUrl>
                <from>defaultnamespace</from>
            </baseUrl>
            <aclReadonly>
                <from>defaultnamespace</from>
            </aclReadonly>
            <canDelete>
                <from>cond</from>
                <type>eq</type>
                <op1>{{aclReadonly}}</op1>
                <op2>1</op2>
            </canDelete>
        </parameters>
        <select>
            <from>
                <aliasname>
                    <tab_valute>tab_valute</tab_valute>
                </aliasname>
                <fields>
                    <idTabValuta>idTabValuta</idTabValuta>
                    <Nome>Nome</Nome>
                    <CodAlfa>CodAlfa</CodAlfa>
                    <Simbolo>Simbolo</Simbolo>
                </fields>
            </from>
            <order>Nome</order>
        </select>
        <updatecolumns>
            <idTabValuta>
                <hidden>1</hidden>
            </idTabValuta>
            <Nome>
                <position>1</position>
                <title>Paese - Valuta</title>
            </Nome>
            <CodAlfa>
                <position>2</position>
                <title>Codice ISO</title>
                <class>width_50</class>
            </CodAlfa>
            <Simbolo>
                <position>3</position>
                <title>Simbolo</title>
                <class>width_50</class>
            </Simbolo>
        </updatecolumns>
        <extracolumns>
            <Edit>
                <position>left</position>
                <title>Edit</title>
                <decorator>
                    /valute/edit/id/{{idTabValuta}}#/images/edit.png#Edit
                </decorator>
            </Edit>
            <if>
                <cond>{{canDelete}}</cond>
                <iftrue>
                </iftrue>
                <iffalse>                    
                    <Del>
                        <position>left</position>
                        <title>Delete</title>
                        <decorator>
                            <link>
                                   /valute/delete/id/{{idTabValuta}}
                            </link>
                            <linkstyle>
                                    cursor:help;
                            </linkstyle>
                            <linkimg>
                                    /images/fechar.png
                            </linkimg>
                            <onclick>return(confirm('Confirm delete?'));</onclick>
                            <linkalt>
                                    Delete
                            </linkalt>
                            <linktitle>
                                    Delete
                            </linktitle>                    
                        </decorator>
                    </Del>
                </iffalse>
            </if>
        </extracolumns>
    </tab_valute>
</grids>