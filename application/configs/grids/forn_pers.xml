<?xml version="1.0" encoding="UTF-8"?>
<grids>
    <forn_pers>
        <title>Fornitori</title>
        <addlink>/forn-pers/new</addlink>
        <addtitle>Nuovo fornitore</addtitle>
        <parameters>
            <baseUrl>
                <from>defaultnamespace</from>
            </baseUrl>
            <aclReadonly>
                <from>defaultnamespace</from>
            </aclReadonly>
            <canDelete>
                <from>cond</from>
                <type>eq</type>
                <op1>{{aclReadonly}}</op1>
                <op2>1</op2>
            </canDelete>
        </parameters>
        <select>
            <from>
                <aliasname>
                    <forn_pers>forn_pers</forn_pers>
                </aliasname>
                <fields>
                    <idFornPers>idFornPers</idFornPers>
                    <Nome>Nome</Nome>
                    <RagSoc>RagSoc</RagSoc>
                    <Citta>Citta</Citta>
                    <Indirizzo>Indirizzo</Indirizzo>
                    <Riferimento>Riferimento</Riferimento>
                    <Telefono>Telefono</Telefono>
                    <Email>Email</Email>
                    <TipoSoc>Tipo</TipoSoc>
                </fields>
            </from>
            <join id='personale'>
                <type>left</type>
                <cond>personale.idFornPers = forn_pers.idFornPers</cond>
                <aliasname>
                    <personale>personale</personale>
                </aliasname>
                <fields>
                    <idPersonale>idPersonale</idPersonale>
                </fields>
            </join>
            <join id='jobs'>
                <type>left</type>
                <cond>jobs.idPersonale = personale.idPersonale</cond>
                <aliasname>
                    <jobs>jobs</jobs>
                </aliasname>
                <fields>
                    <numJobs>COUNT(idJob)</numJobs>
                    <delIco> (CASE WHEN COUNT(jobs.idJob) > 0 THEN 'del-dis' ELSE 'fechar' END) </delIco>
                    <delLink> (CASE WHEN COUNT(jobs.idJob) > 0 THEN '#' ELSE CONCAT('/forn-pers/delete/id/', forn_pers.idFornPers) END) </delLink>
                    <delAlert> (CASE WHEN COUNT(jobs.idJob) > 0 THEN 'alert(''Can`t delete''); return false;' ELSE 'return(confirm(''Confirm delete?''));' END) </delAlert>
                </fields>
            </join>
            <join></join>
            <group>
                forn_pers.idFornPers
            </group>                        
            <order>forn_pers.Nome</order>                        
        </select>
        <updatecolumns>
            <idFornPers>
                <hidden>1</hidden>
            </idFornPers>
            <numJobs>
                <hidden>1</hidden>
            </numJobs>
            <idPersonale>
                <hidden>1</hidden>
            </idPersonale>
            <delIco>
                <hidden>1</hidden>
            </delIco>
            <delLink>
                <hidden>1</hidden>
            </delLink>
            <delAlert>
                <hidden>1</hidden>
            </delAlert>
            <Nome>
                <title>Nome</title>
                <position>1</position>
                <class>width_100</class>
            </Nome>
            <RagSoc>
                <title>Ragione Sociale</title>
                <position>2</position>
            </RagSoc>
            <Citta>
                <title>Citt√†</title>
                <position>3</position>
                <class>width_100</class>
            </Citta>
            <Indirizzo>
                <title>Indirizzo</title>
                <position>4</position>
            </Indirizzo>
            <Riferimento>
                <title>Riferimento</title>
                <position>5</position>
            </Riferimento>
            <Telefono>
                <title>Telefono</title>
                <position>6</position>
            </Telefono>
            <Email>
                <title>Email</title>
                <position>7</position>
            </Email>
            <TipoSoc>
                <title>Type</title>
                <class>width_50</class>
                <position>8</position>
            </TipoSoc>
        </updatecolumns>
        <extracolumns>
            <Edit>
                <position>left</position>
                <title>Edit</title>
                <decorator>
                    /forn-pers/edit/id/{{idFornPers}}#/images/edit.png#Edit
                </decorator>
            </Edit>
            <if>
                <cond>{{canDelete}}</cond>
                <iftrue>
                </iftrue>
                <iffalse>                    
                    <Del>
                        <position>left</position>
                        <title>Delete</title>
                        <decorator>
                            <link>
                                    {{delLink}}
                            </link>
                            <linkstyle>
                                    cursor:help;
                            </linkstyle>
                            <linkimg>
                                    /images/{{delIco}}.png
                            </linkimg>
                            <onclick>{{delAlert}}</onclick>
                            <linkalt>
                                    Delete
                            </linkalt>
                            <linktitle>
                                    Delete
                            </linktitle>                    
                        </decorator>
                    </Del>
                </iffalse>
            </if>
        </extracolumns>
    </forn_pers>
</grids>